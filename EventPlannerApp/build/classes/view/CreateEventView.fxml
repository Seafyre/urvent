<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane id="rootPane" prefHeight="720" prefWidth="1280" styleClass="rootPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.CreateEventViewModel">
    <stylesheets>
        <URL value="@/design/Style.css"/>
    </stylesheets>
    <content>
    <VBox>
        <children>
            <HBox styleClass="topBar" style="-fx-spacing:800;" >
                <children>
                    <Label styleClass="h1">Create an Event</Label>
                    <VBox>
                        <Button styleClass="basicButton" fx:id="homeBtn">Home</Button>
                    </VBox>
                </children>
            </HBox>
            <VBox>
                <children>
                    <TextField fx:id="nameTxtFld" maxWidth="512" styleClass="basicTextField" promptText="Eventname"></TextField>
                    <TextField fx:id="descrTxtFld" maxWidth="512" styleClass="basicTextField" promptText="Description"></TextField>
                    <TextField fx:id="dateTxtFld" maxWidth="512" styleClass="basicTextField" promptText="Date (DD/MM/YYYY)"></TextField>
                    <TextField fx:id="locationTxtFld" maxWidth="512" styleClass="basicTextField" promptText="Location"></TextField>
                    <ComboBox fx:id="locationSelectionComBox"></ComboBox>
                    <Button fx:id="submitBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">Submit</Button>
                    <Button fx:id="cancelBtn" styleClass="basicButtonDark" GridPane.columnIndex="0" prefWidth="256">Cancel</Button>
                </children>
            </VBox>
        </children>
    </VBox>
    </content>
</ScrollPane>